<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create the new cocktail</h1>
      <%= form_for @cocktail do |f| %>
      <%= f.label :name, "Enter a name of the cocktail and press CREATE" %>
      <%= f.text_field :name%>
      <%= f.submit "Create", class: 'btn btn-primary' %>
      <% end%>
    </div>
  </div>
</div>
