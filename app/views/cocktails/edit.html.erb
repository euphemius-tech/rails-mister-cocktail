
<head>
  <title>Mister Cocktail</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="page_header">
        <h1>Edit a cocktail</h1>
      </div>
      <%= form_for @cocktail do |f| %>
      <%= f.label :name, "Rename the cocktail end press RENAME" %>
      <%= f.text_field :name%>
      <div class="page_footer">
        <%= f.submit "rename", class: 'button' %>
      </div>
      <% end%>
    </div>
  </div>
</div>
